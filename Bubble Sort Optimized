#include<iostream>

using namespace std;
void swap(int *x, int *y){
    int t = *x;
    *x = *y;
    *y = t;
}

void bsort(int ar[],int l){
    for(int i=0;i<l-1;i++){
        int s = 0;
        for(int j=0;j<l-i-1;j++){
            if(ar[j]>ar[j+1]){
                swap(&ar[j], &ar[j+1]);
                s = 1;
            }
        } 
        if(s == 0){
            break;
        }
    }
}
void printarr(int ar[], int l){
    for(int i=0; i<l; i++){
        cout<<ar[i]<<" ";
    }
}
int main(){
    cout<<"Enter Size of array :";
    int n;
    cin>>n;
    int a[n];
    cout<<"Enter any "<<n<<" numbers :";
    for(int i=0; i<n; i++){
        cin>>a[i];
    }
    bsort(a,n);
    printarr(a,n);
    return 0;
}
